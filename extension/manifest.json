{
	"manifest_version": 3,
	"name": "Keep Playing YouTube",
	"description": "Auto press the \"Video paused. Continue watching?\" button",
	"version": "0.0.1",
	"icons": {
		"48": "icons/icon_dark.svg",
		"64": "icons/icon_dark.svg",
		"96": "icons/icon_dark.svg",
		"128": "icons/icon_dark.svg"
	},
	"host_permissions": [
		"https://music.youtube.com/watch*",
		"https://wwww.youtube.com/*",
		"https://m.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": [
				"https://music.youtube.com/watch*",
				"https://wwww.youtube.com/*",
				"https://m.youtube.com/*"
			],
			"js": [
				"content_script.js"
			]
		}
	],
	"action": {
		"browser_style": true,
		"default_icon": {
			"48": "icons/icon_dark.svg",
			"64": "icons/icon_dark.svg",
			"96": "icons/icon_dark.svg",
			"128": "icons/icon_dark.svg"
		},
		"default_popup": "action/index.html",
		"default_title": "Video paused. Continue watching?",
		"theme_icons": [
      {
        "dark": "icon_dark.svg",
        "light": "icon-light.svg",
        "size": 64
      },
      {
        "dark": "icon_dark.svg",
        "light": "icon-light.svg",
        "size": 48
      },
      {
        "dark": "icon_dark.svg",
        "light": "icon-light.svg",
        "size": 32
      },
      {
        "dark": "icon_dark.svg",
        "light": "icon-light.svg",
        "size": 16
      }
    ]
	},
	"options_ui": {
		"page": "options/index.html"
	}
}